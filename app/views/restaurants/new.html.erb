<div class="container">
<h1>Add a new restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.submit "Add restaurant", class: "btn btn-primary" %>
<% end %>
<%= link_to "Go back to the list", restaurants_path, class: "btn btn-primary" %>
</div>
